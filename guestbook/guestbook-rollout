apiVersion: argoproj.io/v1alpha1
kind: Rollout
metadata:
  name: rollout-guestbook-ui
  namespace: default
  labels:
    app: guestbook-ui
spec:
  replicas: 3
  revisionHistoryLimit: 5
  selector:
    matchLabels:
      app: guestbook-ui
  template:
    metadata:
      labels:
        app: guestbook-ui
    spec:
      containers:
      - name: guestbook-ui
        image: gcr.io/heptio-images/ks-guestbook-demo:0.1
        ports:
        - containerPort: 80
  strategy:
    canary:
      canaryService: guestbook-ui-canary
      stableService: guestbook-ui
      steps:
      - setWeight: 10
      - pause: {duration: 30s}
      - setWeight: 30
      - pause: {duration: 1m}
      - setWeight: 50
      - pause: {duration: 2m}
      - setWeight: 100
